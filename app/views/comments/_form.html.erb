<div class="container mt-5 form-group">
  <%= form_tag gossip_comments_path(@gossip), method: "post" do %>
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">

  <%= label_tag 'Ajouter un nouveau commentaire' %>
  <%= text_field_tag 'content', @comment.content, class:"form-control" %>
  <br />

  <%= submit_tag "Enregistrer", class:"btn btn-primary"%>

  <% end %>
</div>


